<p id="notice"><%= notice %></p>

<h1>Shoes</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Seller</th>
      <th>Model</th>
      <th>Condition</th>
      <th>Price</th>
      <th>Description</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= shoe.brand %></td>
        <td><%= shoe.user.email %></td>
        <td><%= shoe.model %></td>
        <td><%= shoe.condition %></td>
        <td><%= shoe.price %></td>
        <td><%= shoe.description %></td>
        <td><%= shoe.location.state %></td>
        <td><%= link_to 'Show', shoe %></td>
        <td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
        <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

