<p id="notice"><%= notice %></p>


<div style="display:wrap; flex-wrap]:wrap">
<% @shoes.each do |shoe| %>
<div class="card" style="width:200px">
  <div class="card-image" style="width: 150px">
    <figure class="image is-4by3">
      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image" >
    </figure>
  </div>
  <div class="card-content">
    <div class="media">
      <div class="media-left">
        <figure class="image is-48x48">
          <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
        </figure>
      </div>
      <div class="media-content">
        <p class="title is-4"><%= shoe.brand %></p>
        <p class="subtitle is-6"><%= shoe.model %></p>
      </div>
    </div>

    <div class="content">
      <%= shoe.description %> <br>
      $<%= shoe.price %> <br>
      <%= shoe.condition %> 
      <br>
      <%= shoe.location.state %>
    </div>
     <div><%= link_to 'Show', shoe %></td>
        <% if current_user == shoe.user%>
        <td><%= link_to 'Edit', edit_shoe_path(shoe) %></td>
        <td><%= link_to 'Destroy', shoe, method: :delete, data: { confirm: 'Are you sure?' } %>
        </div>
        <%end%>
  </div>
</div>
<% end %>
</div>


